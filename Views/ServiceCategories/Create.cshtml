@model HotelBooking.Models.ServiceCategories

@{
    ViewData["Title"] = "Create";
}

<h1>Create</h1>

<h4>ServiceCategories</h4>
<hr />


<div class="row">
    <div class="col-md-4">
        <form asp-action="Create" method="post" id="productForm">
            <div class="form-group">
                <label asp-for="Name"></label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Description"></label>
                <input asp-for="Description" class="form-control" />
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Status"></label>
                <input asp-for="Status" class="form-control" />
                <span asp-validation-for="Status" class="text-danger"></span>
            </div>
            <input type="hidden" name="imagephoto" id="ProductImageUrl" />

            <input type="file" id="photo" name="imagephoto" />

            <button type="button" id="uploadAndSubmit" class="btn btn-primary">Upload and Submit</button>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

